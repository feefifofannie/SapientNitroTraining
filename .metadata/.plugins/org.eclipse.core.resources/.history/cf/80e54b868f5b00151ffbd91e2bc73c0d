<script type="text/javascript">
    function validateForm()
    {
    var a=document.form.username.value;
    var b=document.form.password.value;
    if (a==null || a=="",b==null || b=="")
      {
      alert("Please Fill All Required Fields");
      return false;
      }
    }
    </script>
