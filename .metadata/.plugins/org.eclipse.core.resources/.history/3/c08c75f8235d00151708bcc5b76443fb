	<script type="text/javascript">
    	function validateForm(){
    		var a=document.form.username.value;
    		var b=document.form.password.value;
    		if (a==null || a=="" || b==null || b==""){
      			alert("Please Fill All Required Fields");
      			return false;
      		}
    		if (a=="careyprice" && b=="gohabs"){
    			alert("Either your username or password is incorrect.");
      			return false;
    		}
    	}
    </script>
    
      <h1>Login to Blackhawks Portal</h1>
      <form method="post" name="form" onsubmit="return validateForm()" action="index.html">
